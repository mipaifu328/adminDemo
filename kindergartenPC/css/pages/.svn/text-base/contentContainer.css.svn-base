.content-container{
	width: 600px;
}
.content-title{
	font-size: 18px;
	font-weight: bold;
	padding: 10px 0;
}
.content-box{
	padding: 6px 12px;
	line-height: 30px;
	border:1px solid #ccc;
	border-radius:4px;
	min-height: 120px;
}
.content-container .img-box{
	padding-top: 15px;
	padding-bottom:10px;
}
.content-container .img-box img{
	max-width: 100%;
	margin-bottom: 5px;
}
.content-container a{
	color: #21BAA8;
}
.content-container table th{
	background-color: #f5f5f5;
}
@media only screen and (max-width: 768px){
	.content-container{
		width: 100%;
	}
}