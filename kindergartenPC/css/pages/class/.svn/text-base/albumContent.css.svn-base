.content-title{
	font-size: 18px;
	font-weight: bold;
	padding: 10px 0;
}
.content-msg span{
	margin: 0 40px 0 10px;
	font-size: 12px;
}
.date-time{
	margin: 10px 0;
	line-height: 40px;
	color: #21BAA8;
	clear: both;
}
.date-time::before,
.date-time::after{
	content: '';
	margin: 0 20px;
	margin-bottom: 4px;
	display: inline-block;
	width: 50px;
	border-top:1px solid #21BAA8;
}
.date-time::before{
	margin-left: 0;
}
.date-time::after{
	margin-right: 0;
}
.album-items {
	clear: both;
}
.album-items li{
	list-style: none;
	float: left;
	margin: 10px 0;
	margin-right: 20px;
	width: 210px;
	border: 1px solid #ccc;
	box-sizing: border-box;
}
.album-items li img{
	width: 100%;
	height: 150px;
}
.album-items li>div{
	background-color:#f5f5f5;
	text-align: center;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	line-height: 30px;
}

@media only screen and (max-width: 768px){
	.content-msg span{
		margin: 0 15px 0 5px;
	}
	.album-items li{
		margin-right: 0;
		width: 100%;
	}
}